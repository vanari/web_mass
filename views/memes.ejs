<html>
    <%- include("./partials/head.ejs") %>
    <body>
        <%- include("./partials/top.ejs") %>
        <div class="content">
            <h1>Memíkový board</h1>
            <a class="ref" href="/memes/new">Nahrát meme</a>
            <h2 style="margin-top: 30px;">Shitpomstimg</h2>
            <div class="posts">
                <% if (memes.length > 0) { %>
                    <% memes.forEach((meme) => { %>
                        <a class="single" href="/memes/<%= meme._id %>">
                            <h3><%= meme.name %></h3>
                            <img src="<%= meme.meme %>" style="width: 240px;">
                        </a>
                    <% }) %>
                <% } else { %>
                    <h3>Žádné memy :/</h3>
                <% } %>
            </div>
        </div>
        <%- include("./partials/footer.ejs") %>
    </body>
</html>